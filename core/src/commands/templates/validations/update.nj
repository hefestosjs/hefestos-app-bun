import * as z from "zod";
import { SchemaCreate } from "./Create";

export const SchemaUpdate = SchemaCreate.partial({ name: true });

export type SchemaType = z.infer<typeof SchemaUpdate>;

export function UpdateValidation(data: SchemaType) {
  try {
    SchemaUpdate.parse(data);
  } catch (error) {
    if (error instanceof z.ZodError) {
      throw error;
    }
  }
}
